# Configuration des variables d'environnement pour Render
# Copiez ces variables dans le Dashboard Render (Environment Variables)

# Application
APP_NAME=AquaGestion
APP_ENV=production
APP_DEBUG=false
APP_URL=https://votre-app.onrender.com

# IMPORTANT: Générez cette clé avec: php artisan key:generate --show
# Puis remplacez la valeur ci-dessous
APP_KEY=base64:VOTRE_CLE_GENEREE_ICI

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=debug

# Base de données
# Remplacez ces valeurs par celles fournies par votre service de base de données
DB_CONNECTION=mysql
DB_HOST=votre-db-host.com
DB_PORT=3306
DB_DATABASE=aquagestion
DB_USERNAME=votre-username
DB_PASSWORD=votre-password

# Session & Cache
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Mail (optionnel - à configurer selon vos besoins)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="liferopro@gmail.com"
MAIL_FROM_NAME="${APP_NAME}"

# Important pour Render
PORT=80
